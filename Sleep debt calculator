function getSleepHours(day) {
  if (day === 'Monday') {
    return 8;
  } else if (day === 'Tuesday') {
    return 7;
  } else if (day === 'Wednesday') {
    return 4;
  } else if (day === 'Thrusday') {
    return 7;
  } else if (day === 'Friday') {
    return 10;
  } else if (day === 'Saturday') {
    return 4;
  } else {//if (day === Sunday)
      return 3;
  }
}

//Testing the function
//console.log(getSleepHours('Sunday'));

const getActualSleepHours = () =>{
  d1 = getSleepHours('Monday');
  d2 = getSleepHours('Tuesday');
  d3 = getSleepHours('Wednesday');
  d4 = getSleepHours('Thrusday');
  d5 = getSleepHours('Friday');
  d6 = getSleepHours('Saturday');
  d7 = getSleepHours('Sunday');
  return d1+d2+d3+d4+d5+d6+d7;
}  

//Function declaration using literal values.
//const getActualSleepHours = () =>{
 // 5 + 4 + 2 + 6 + 6 + 5 + 3; } 

