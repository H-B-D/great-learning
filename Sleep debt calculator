const calculateSleepDebt = () => {
  const actualSleepHours = getActualSleepHours();
  const idealSleepHours = getIdealSleepHours();
  if (actualSleepHours === idealSleepHours) {
    console.log('You got ' + actualSleepHours + ' hour(s) sleep, the perfect amount of sleep needed this week!');
  } else if (actualSleepHours >= idealSleepHours) {
    console.log('You got ' + (actualSleepHours - idealSleepHours) + ' hour(s) more sleep than needed this week.');
  } else {   
    console.log('You got ' + (idealSleepHours - actualSleepHours) + ' hour(s) less amount of sleep needed this week. Get some rest.');  
  }
}

calculateSleepDebt();

#output
#You got 6 hour(s) less amount of sleep needed this week. Get some rest.
